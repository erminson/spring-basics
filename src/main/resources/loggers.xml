<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="ru.erminson.loggers.ConsoleEventLogger"/>

    <bean id="fileLogger" class="ru.erminson.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log"/>
    </bean>

    <bean id="cacheFileEventLogger"
          class="ru.erminson.loggers.CacheFileEventLogger"
          parent="fileLogger"
          destroy-method="destroy">
        <constructor-arg value="3"/>
    </bean>
</beans>